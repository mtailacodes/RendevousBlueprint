<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NavigationActivity">

        <TextView android:id="@+id/signInActivityButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Sign In Activity"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textAllCaps="true"
            android:textSize="14sp"/>

        <TextView android:id="@+id/signInActivityButtonKotlin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInActivityButton"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Sign In Kotlin"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="14sp"/>

        <TextView android:id="@+id/startActivityForREsils"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInActivityButtonKotlin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="startActivityForREsils"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="14sp"/>

        <ImageView android:id="@+id/pictureExample"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startActivityForREsils"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"/>

    </android.support.constraint.ConstraintLayout>
</layout>